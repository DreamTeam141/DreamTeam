@model IEnumerable<Faculty.Models.UserViewModel>

@{
    ViewBag.Title = "Teachers";
}

<h2 class="text-center">Teachers</h2>
<hr/>

<p>
    <a href="~/Teacher/Register" class="btn btn-primary">
        <span class="glyphicon glyphicon-plus"></span> Add teacher
    </a>
</p>
<table class="table table-hover table-striped">
    <tr>
        <th class="col-md-3">
            @Html.DisplayNameFor(model => model.SecondName)
        </th>
        <th class="col-md-4">
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th class="col-md-3">
            @Html.DisplayNameFor(model => model.Patronymic)
        </th>
        <th class="col-md-2"></th>
    </tr>

@foreach (var item in Model) {
    <tr class="text-justify">
        <td>
            @Html.DisplayFor(modelItem => item.SecondName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Patronymic)
        </td>
        <td class="text-right">
            @Html.ActionLink("Profile", "Profile", "Account", new { id=item.Id }, new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>
