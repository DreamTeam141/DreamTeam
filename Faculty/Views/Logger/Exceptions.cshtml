@model IEnumerable<Faculty.Models.ExceptionDetailViewModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Exceptions</h2>
<hr/>

<table class="table table-hover table-striped table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExceptionMessage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ControllerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActionName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="text-justify">
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExceptionMessage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ControllerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActionName)
        </td>
        <td class="text-right">
            @Html.ActionLink("Details", "Details", new {id = item.Id}, new { @class = "btn btn-primary" }) 
        </td>
    </tr>
}

</table>
