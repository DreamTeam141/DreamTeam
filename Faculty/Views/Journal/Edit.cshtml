@model Faculty.Models.JournalViewModel

@{
    ViewBag.Title = "Edit";
}

<h2 class="text-center">Edit journal</h2>
<hr/>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table class="table table-hover table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseStudentViewModels[0].Student.ApplicationUser.SecondName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseStudentViewModels[0].Student.ApplicationUser.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseStudentViewModels[0].Student.ApplicationUser.Patronymic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseStudentViewModels[0].Mark)
            </th>
            <th></th>
        </tr>

        @for (int i = 0; i<Model.CourseStudentViewModels.Count; i++)
        {
            <tr>
                @Html.HiddenFor(model => model.CourseStudentViewModels[i].CourseId)
                @Html.HiddenFor(model => model.CourseStudentViewModels[i].StudentId)
                @Html.HiddenFor(model => model.CourseStudentViewModels[i].Student.ApplicationUser.FirstName)
                @Html.HiddenFor(model => model.CourseStudentViewModels[i].Student.ApplicationUser.SecondName)
                @Html.HiddenFor(model => model.CourseStudentViewModels[i].Student.ApplicationUser.Patronymic)
                <td>
                    @Html.DisplayFor(model => model.CourseStudentViewModels[i].Student.ApplicationUser.SecondName, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td>
                    @Html.DisplayFor(model => model.CourseStudentViewModels[i].Student.ApplicationUser.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td>
                    @Html.DisplayFor(model => model.CourseStudentViewModels[i].Student.ApplicationUser.Patronymic, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td>
                    @Html.EditorFor(model => model.CourseStudentViewModels[i].Mark, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CourseStudentViewModels[i].Mark, "", new { @class = "text-danger" })
                </td>
                <th class="text-right">
                        @Html.ActionLink("Delete", "Delete", "Journal", new {id = Model.CourseStudentViewModels[i].StudentId, courseid = Model.CourseStudentViewModels[i].CourseId } , new{ @class = "btn btn-primary"})
                </th>
            </tr>
        }

    </table>

    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Save" class="btn btn-primary"/>
        </div>
    </div>
    <br/>
}
