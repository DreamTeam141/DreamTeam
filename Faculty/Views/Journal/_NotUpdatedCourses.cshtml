@model IEnumerable<Faculty.Models.CourseViewModel>

<h4 class="text-center">Need updates</h4>

<table class="table table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Durations)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Durations)
        </td>
        <td class="text-right">
            @Html.ActionLink("Open", "Info", new { id=item.Id }, new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>
