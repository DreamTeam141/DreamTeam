@model Faculty.Models.CourseListViewModel

@{
    ViewBag.Title = "Courses";
}

<h2 class="text-center">Courses</h2>
<hr />


<div>
    @Html.Partial("_SortCoursePanel", Model.PanelViewModel)
</div>
<p>
    <a href="~/Course/Create" class="btn btn-primary">
        <span class="glyphicon glyphicon-plus"></span> New course
    </a>
</p>
<table class="table table-hover table-striped">
    <tr>
        <th class="col-md-2 text-center">
            @Html.DisplayNameFor(model => model.Course.Title)
        </th>
        <th class="col-md-6 text-center">
            @Html.DisplayNameFor(model => model.Course.Description)
        </th>
        <th class="col-md-1 text-center">
            @Html.DisplayNameFor(model => model.Course.Durations)
        </th>
        <th class="col-md-3 text-center"></th>
    </tr>

    @foreach (var item in Model.Courses)
    {
        <tr class="text-justify">
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Durations)
            </td>
            <td class="text-right">
                <div class="btn-group">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-primary" })
                </div>
            </td>
        </tr>
    }

</table>
