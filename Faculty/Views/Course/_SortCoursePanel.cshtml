@model Faculty.Models.SortCoursesPanelViewModel

@using (Html.BeginForm("Index", "Course")) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 class="text-center">Order by</h4>
        <div class="form-group">
            @Html.LabelFor(model => model.Order, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Order", Model.OrderParams,   new { @class = "form-control"  })
                @Html.ValidationMessageFor(model => model.Order, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TeacherSortId,  new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TeacherSortId", Model.TeacherSortParams,  new { @class = "form-control"  })
                @Html.ValidationMessageFor(model => model.TeacherSortId, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.SubjectSortId,  new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SubjectSortId", Model.SubjectSortParams, new { @class = "form-control"  })
                @Html.ValidationMessageFor(model => model.SubjectSortId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
    </div>
}