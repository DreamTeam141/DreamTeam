@model IEnumerable<Faculty.Models.SubjectViewModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Subjects</h2>
<hr />

<p>
    <a href="~/Subject/Create" class="btn btn-primary">
        <span class="glyphicon glyphicon-plus"></span> New subject
    </a>
</p>
<table class="table table-hover table-striped">
    <tr>
        <th class="col-md-10">
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th class="col-md-2"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="text-justify">
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td class="text-right">
                <div class="btn-group">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-primary" })
                </div>
            </td>
        </tr>
    }

</table>
